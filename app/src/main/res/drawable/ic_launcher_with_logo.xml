<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- White circle background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <size android:width="108dp" android:height="108dp"/>
        </shape>
    </item>
    
    <!-- Subtle shadow/border -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#E8E8E8"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    
    <!-- Logo image -->
    <item android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp">
        <bitmap 
            android:src="@drawable/logocerta"
            android:gravity="center"/>
    </item>
    
</layer-list>
